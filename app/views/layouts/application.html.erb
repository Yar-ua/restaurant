<!DOCTYPE html>
<html>
  <head>
    <title>Restaurant</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<%= render 'layouts/header' %>

    <div class="container">
      <div class="row">
        <div class="col-lg-12">

          <!-- меню администратора -->
          <% if user_admin %>
            <%= render 'layouts/admin_menu' %>
          <% end %>
          
          <!-- вывод уведомлений и ошибок -->
          <% if notice != nil %>
            <p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert != nil %>
            <p class="alert alert-error alert-danger"><%= alert %></p>
          <% end %>

                 
          <%= yield %>

        </div>
      </div>

    <hr/>
    <%= debug(params) if Rails.env.development? %> 
    <hr/>

    <!-- моя зона отладки -->
    <% if Rails.env.development? %> 
      from user <%= current_user.cart.inspect if user_signed_in? %><br/>
      <%#= @product_types.inspect %><br/>
      Cart: <%= @cart.inspect %>
      User_signed? <%= user_signed_in? %>
    <% end %>
  </div>
  
  </body>
</html>
