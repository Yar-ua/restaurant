<!-- форма редацтирования группы -->
<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> ошибок:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, 'Название группы' %>
    <%= form.text_field :name %>
  </div>


  <div class="actions">
    <%= form.submit 'Обновить' %>
  </div>

<% end %>

<div class="actions">
  <%= button_to 'Удалить', group_path(id: group.id), method: :delete,
  class: 'btn btn-danger btn-sm' %> 
</div>

