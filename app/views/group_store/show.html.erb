<!-- страница меню при групповом заказе -->
<h1>Наше меню для группового заказа</h1>

<br/>

<b>Текущая группа: <%= @group.name %> | </b>
<%= link_to 'Просмотр группы', group_path(id: @group.id) %> |
<%= link_to 'Заказ группы', group_cart_path(group_id: @group.id, id: @group_cart.id)  %> | 
<%= link_to 'Выйти из группы к одиночному заказу', root_path %>
<br/>

<hr/>

<%= link_to 'Все меню |', group_store_index_path %>
<!-- рендерим партиал с типом меню -->
<%= render partial: 'group_store/group_store_product_type', collection: @product_types, as: 'product_type' %>

<hr/>

<div id="products_table">
  <table class="table table-border table-hover">
    <thead>
      <tr>
        <th>Блюдо</th>
        <th>Описание</th>
        <th>Стоимость, грн</th>
        <th></th>
      </tr>
    </thead>
      
    <!-- рендерим через партиал список меню данного типа -->
    <%= render partial: 'group_store/group_product_table', collection: @products_by_product_type, as: 'product_table' %>

  </table>
</div>
