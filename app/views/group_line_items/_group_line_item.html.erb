<!-- партиал для рендеринга состава групповой корзины  -->
<div id='table'>
  <tr class="group_cart_menu" id="group_line_item_<%= group_line_item.id %>">
    <td><%= group_line_item.product.title %></td>
    <td><%= group_line_item.product.description %></td>
    <td>заказал клиент <%= group_line_item.user.name %></td>
    <td><%= group_line_item.quantity %> шт</td>
    <td><%= group_line_item.total_price %> шт</td>

    <td class="item_price">
      <!-- показывать элементы управления товарами если именно текущий юзер их добавлял в корзину -->
    	<%= my_number_to_currency(group_line_item.total_price) %> |
      <% if group_line_item.user == current_user %>
        <%= link_to fa_icon('pencil-square-o') + 'ред', edit_group_line_item_path(id: group_line_item.id) %> |
        <%= link_to fa_icon('window-close-o') + 'удал', group_line_item_path(id: group_line_item.id),
      	method: :delete, data: {confirm: 'удалить товар из заказа?', remote: true}, 
      	style: "color: red" %>
      <% end %>
    </td>
    
  </tr>
</div>
