<h2>Корзина вашего группового заказа</h2>
<br/>

<table class="table table-bordered" id="group_cart_table">
  <!-- рендерим партиал с коллекцией позиций групповой корзины -->
  <div id="cart_list">
    <%= render(group_cart.group_line_items) %>
  </div>
  <tr class="total_line">
  	<td colspan="4"><b>Итого</b></td>
  	<td class="total_cell"><b><%= my_number_to_currency(@group_cart.total_price) %> грн</b></td>
  </tr>

</table>

<div id="container_cart_buttons">
  <%= link_to 'Управлять таблицей заказов', group_cart_path(group_id: @group.id, id: @group_cart.id), class: "btn btn-primary btn-sm", id: "control_button" %> | 
  <%= button_to 'Очистить корзину заказа', group_cart_path(group_id: @group.id,
			id: @group_cart.id), method: :delete, 
	    data: {confirm: 'Вы уверены что хотите очистить корзину заказа?'}, remote: true,
	    class: 'btn btn-danger btn-sm' %> 

  <%= button_to 'Оформить заказ', new_group_order_path, method: :get,
	    class: 'btn btn-success btn-sm' %> 

</div>

<%= link_to 'Назад в меню для группы', group_store_index_path(group_id: @group.id) %> <br/>