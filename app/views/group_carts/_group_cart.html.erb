<h2>Меню вашего предварительного группового заказа</h2>
<br/>

<table class="table table-bordered">
  <!-- рендерим партиал с коллекцией позиций групповой корзины -->
  <%= render(group_cart.group_line_items) %>
  <tr class="total_line">
  	<td colspan="4"><b>Итого</b></td>
  	<td class="total_cell"><b><%= my_number_to_currency(@group_cart.total_price) %> грн</b></td>
  </tr>

</table>


<%= link_to 'Назад', :back %> | 
<br/>

<%= button_to 'Очистить корзину заказа', group_cart_path(group_id: @group.id,
			id: @group_cart.id), method: :delete, 
	data: {confirm: 'Вы уверены что хотите очистить корзину заказа?'}, 
	class: 'btn btn-danger btn-sm' %> |

<%= button_to 'Оформить заказ', new_group_order_path, method: :get,
	class: 'btn btn-success btn-sm' %> 

