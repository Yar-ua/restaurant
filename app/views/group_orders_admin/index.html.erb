<h1>Просмотр всех групповых заказов</h1>
<%= link_to 'Экспорт групповых заказов в CSV', group_orders_admin_index_path(format: "csv") %>

<div id="single-orders_table">
  <table class="table table-border table-hover">
    <thead>
      <tr>
        <th>ID заказа</th>
        <th>Комментарии к заказу</th>
        <th>Стоимость, грн</th>
        <th>Детализация</th>
      </tr>
    </thead>

  <!-- рендерим через партиал заказы -->
  <% if @group_orders %>
    <%= render partial: 'group_orders_admin/group_order', collection: @group_orders, as: 'group_order' %>
  <% end %>
  </table>
</div>

